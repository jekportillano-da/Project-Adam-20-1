# Environment configuration for dev/prod split
# Copy this to .env and customize as needed

# Application Environment (dev or prod)
APP_ENV=dev

# Security Configuration
SECRET_KEY=your-super-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI API Configuration
GROQ_API_KEY=your_groq_api_key_here

# DeepSeek API Configuration (legacy)
DEEPSEEK_API_KEY=your_api_key_here

# Environment
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DATABASE_URL=sqlite:///./budget_assistant.db

# Service URLs
BUDGET_SERVICE_URL=http://localhost:8081
SAVINGS_SERVICE_URL=http://localhost:8082
INSIGHTS_SERVICE_URL=http://localhost:8083

# Security & CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:8000
MAX_REQUEST_SIZE=1048576
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
