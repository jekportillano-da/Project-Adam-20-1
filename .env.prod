# Production Environment Configuration
ENV=prod
PORT=8080
ROUTE_PREFIX=
SECRET_KEY=production-ready-secret-key-$(openssl rand -hex 32)-change-in-real-production
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Debug settings
DEBUG=false
LOG_LEVEL=INFO

# CORS settings for production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Database
DATABASE_URL=sqlite:///./budget_assistant_prod.db

# API Keys (required for production)
# GROQ_API_KEY=your_groq_api_key_here
# DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Services (microservices URLs)
BUDGET_SERVICE_URL=http://localhost:8001
SAVINGS_SERVICE_URL=http://localhost:8002
INSIGHTS_SERVICE_URL=http://localhost:8003

# Security settings
COOKIE_SECURE=true
COOKIE_SAMESITE=strict
